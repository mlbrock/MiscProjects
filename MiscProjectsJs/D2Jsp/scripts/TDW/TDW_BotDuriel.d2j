// ////////////////////////////////////////////////////////////////////////////
function TDW_BB_Start(config_list)
{
	var init_err_msg = TDW_BOT_Init("TDW_BotDuriel", null, config_list);
	if (init_err_msg)
		TDW_BOT_SUPP_DoExitWithMsg(init_err_msg);

	TDW_MOVE_GetMyWayPointAccess();

//	TDW_BOT_SUPP_DoMessageDND("talk witcha lata!");

	TDW_BB_KillDuriel();

	TDW_BOT_FinalComplete();
}
// ////////////////////////////////////////////////////////////////////////////

// ////////////////////////////////////////////////////////////////////////////
function TDW_BB_KillDuriel()
{
	var count_1;

	var access_strategy = TDW_BOT_MOVE_GetDefaultLinkAccessStrategy();

	if (me.act != 2) {
		TDW_BOT_MOVE_RecoverInTown(false);
		TDW_MOVE_COMPAT_TownMove(2, "waypoint");
	}

	TDW_BOT_CHECK_PrecastChecks(30000);		// Ensure pre-casts will last...
	TDW_PATH_FixUpAct();
	if (TDW_PATH_GotoTargetArea(D2JSP_AREA_DURIELS_LAIR, access_strategy,
		TDW_PATHL_AREA_LOAD_FLAG_DEFAULT))
		return(-1);

	if (me.area != D2JSP_AREA_DURIELS_LAIR) {
		access_strategy.callback_func(access_strategy,
			TDW_PATH_ASCB_MSG_ERROR, "Unable to enter Duriel's Lair.");
		return(-1);
	}

	TDW_BOT_AttackNPCSpec.addNPC(new TDW_BOT_ATTACK_SpecialNPC("Duriel",
		TDW_BOT_ATTACK_NPC_FLAG_NO_RETURN | TDW_BOT_ATTACK_NPC_FLAG_MUST_KILL,
		20, 0, 3, null, null, null, TDW_BOT_FinalComplete));

	for (var count_1 = 0; count_1 < 10; count_1++) {
		TDW_BOT_AttackNPCSpec.killAny();
		delay(100);
	}

	if (TDW_BOT_AttackNPCSpec.findNPC("Duriel")) {
		access_strategy.callback_func(access_strategy,
			TDW_PATH_ASCB_MSG_ERROR, "Unable to locate or kill Duriel.");
		return(-1);
	}

  return(0);
}
