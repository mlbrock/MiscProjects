// ////////////////////////////////////////////////////////////////////////////
function main()
{
	var config_list = new Array();

	// Override configuration entries with 'config_list'.
	TDW_BOT_ConfigureList["tdw.bot.pindleskin.attack.func.pre"]    =
		TDW_BOT_PB_PindleKill_PreFunc_Meteor;
	TDW_BOT_ConfigureList["tdw.bot.pindleskin.attack.func.attack"] =
		TDW_BOT_PB_PindleKill_AttackFunc_Meteor;
	TDW_BOT_ConfigureList["mysnagit.radius"]                       = 60;

	TDW_BOT_PB_Start(config_list);
}
// ////////////////////////////////////////////////////////////////////////////

// ////////////////////////////////////////////////////////////////////////////
function TDW_BOT_PB_PindleKill_PreFunc_Meteor(special_npc, npc_obj)
{
	TDW_BOT_PB_PindleKill_CheckResists_Meteor(npc_obj);

	if (npc_obj.getEnchant(D2JSP_ENCHANT_EXTRA_FAST)) {
		TDW_BOT_Log.logWarning(D2JSP_UTIL_COLOR_YELLOW + "Aborting Pindleskin " +
			"run because he is extra fast.");
		TDW_BOT_FinalComplete();
	}

	D2JSP_SKILL_SetAndUseSkillBasic(false, "Meteor", 0, npc_obj.x, npc_obj.y);
}
// ////////////////////////////////////////////////////////////////////////////

// ////////////////////////////////////////////////////////////////////////////
function TDW_BOT_PB_PindleKill_AttackFunc_Meteor(special_npc, npc_obj)
{
	TDW_BOT_PB_PindleKill_CheckResists_Meteor(npc_obj);

	TDW_BOT_PB_PindleKill_AttackFunc(special_npc, npc_obj);
}
// ////////////////////////////////////////////////////////////////////////////

// ////////////////////////////////////////////////////////////////////////////
function TDW_BOT_PB_PindleKill_CheckResists_Meteor(npc_obj)
{
	if (npc_obj.getStat(D2JSP_STAT_FIRERESIST) > 75) {
		TDW_BOT_Log.logWarning(D2JSP_UTIL_COLOR_YELLOW + "Aborting Pindleskin " +
			"run because his fire resistance is " +
			npc_obj.getStat(D2JSP_STAT_FIRERESIST) + "%.");
		TDW_BOT_FinalComplete();
	}
}
