function main()
{
	var config_list = new Array();

	TDW_CA_Start(config_list);
}
// ////////////////////////////////////////////////////////////////////////////

// ////////////////////////////////////////////////////////////////////////////
function TDW_CA_Start(config_list)
{
//TDW_BOT_ConfigureList["operation.log.level.file"] = D2JSP_UTIL_LOG_Level_MINUTIAE;

	var init_err_msg = TDW_BOT_Init("TDW_BotClear", null, config_list,
		TDW_BOT_INIT_FLAG_NON_POWER_BOT);

	if (init_err_msg)
		TDW_BOT_SUPP_DoExitWithMsg(init_err_msg);

	TDW_MOVE_GetMyWayPointAccess();

	var access_strategy = (TDW_BOT_ContextList["tdw.bot.clear.walk"]) ?
		TDW_BOT_MOVE_GetDefaultLinkAccessStrategy_Walk() :
		TDW_BOT_MOVE_GetDefaultLinkAccessStrategy();

	TDW_BOTLIB_ClearArea(TDW_BOT_ContextList["tdw.bot.clear.area.list"],
		access_strategy, TDW_BOTLIB_CLEARAREA_FLAG_NO_KILL,
		TDW_PATHL_AREA_LOAD_FLAG_DEFAULT);

	if (TDW_BOT_MOVE_TownLogic(TDW_BOT_MOVE_TOWN_FLAG_FORCE_ISF, TDW_ISF_Cfg))
		TDW_BOT_SUPP_DoExitWithMsg("Unable to complete town logic.");

	TDW_BOT_FinalComplete();
}
