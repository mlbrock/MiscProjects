// ////////////////////////////////////////////////////////////////////////////
function main()
{
	var bot_name      = "TDW_LogMessages";
	var log_file_name = "output/" + bot_name + "." + me.realm + "." + 
		me.account + "." + me.name + ".log";

	TDW_BOT_Log = new D2JSP_UTIL_Log(log_file_name, bot_name);

//	TDW_BOT_Log.syncModeOn();

	print("The " + bot_name + " is running");

	D2JSP_UTIL_GEN_CheckGameReady();

	print(D2JSP_UTIL_COLOR_GREEN + "Ready: Logging messages");

	while (true) {
		me.overhead(D2JSP_UTIL_COLOR_GREEN + "Logging messages");
		delay(500);
	}
}
